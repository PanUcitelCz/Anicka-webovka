.Card
    width 266px
    display flex
    flex-direction column
    justify-content: center
    height 303px
    border-radius 16px
    box-shadow 0px 4px 4px 0px rgba(0, 0, 0, 0.25)
    transition ease .3s
    margin auto
    
    &-img
        width 100%
        height 136px

        img
            width 100%
            height 100%
            object-fit: cover
            border-radius 16.5px 16.5px 0 0
    
    &-Header
        padding 18px 12px 18px 12px
        margin: auto
        display flex
        flex-direction column
        justify-content center

        h3
            padding 0
            margin 0
        
    &-Footer
        display flex
        flex-direction row
        justify-content space-between
        padding 8px 12px 18px 12px
    
    &:hover
        box-shadow 0px 4px 4px 0px rgba(243, 29, 29, 0.25)